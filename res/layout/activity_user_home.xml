<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/app_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title"
        style="@style/title_Bar"
        android:visibility="gone" >

        <TextView
            android:id="@+id/mantitle"
            style="@style/app_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/me" />

        <Button
            android:id="@+id/setting"
            style="@style/padingstyle"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/com_narbar_setting_white_selecter" />

        <ImageView
            android:id="@+id/smloading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8.0dip"
            android:layout_toRightOf="@+id/mantitle"
            android:src="@drawable/com_loding_white_small" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="156.0dip"
                android:background="@drawable/profile_image_bg" >

                <RelativeLayout
                    android:id="@+id/home_detail"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="56.0dip"
                    android:paddingLeft="16.0dip" >

                    <RelativeLayout
                        android:id="@+id/hf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/com_head_bg" >

                        <ImageView
                            android:id="@+id/my_head"
                            android:layout_width="@dimen/head_width"
                            android:layout_height="@dimen/head_heigth"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/com_avatar_default_large"
                            android:scaleType="fitXY" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/log_before"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16.0dip"
                        android:layout_toRightOf="@+id/hf"
                        android:orientation="vertical" >

                        <Button
                            android:id="@+id/login_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/com_bg_transparent_bg"
                            android:text="@string/login_btn"
                            android:textColor="@color/app_white"
                            android:textSize="17.0sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/log_after"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16.0dip"
                        android:layout_toRightOf="@+id/hf"
                        android:orientation="vertical"
                        android:visibility="invisible" >

                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="name"
                            android:textColor="@color/app_white"
                            android:textSize="18.0sp" />

                        <TextView
                            android:id="@+id/user_school"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10.0dip"
                            android:text="school"
                            android:textColor="@color/app_white"
                            android:textSize="12.0sp"
                            android:visibility="gone" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8.0dip" >

                            <Button
                                android:id="@+id/authentication_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/com_runbtn"
                                android:paddingBottom="5.0dip"
                                android:paddingLeft="16.0dip"
                                android:paddingRight="16.0dip"
                                android:paddingTop="5.0dip"
                                android:text="@string/g_a"
                                android:textColor="@color/app_white"
                                android:textSize="14.0sp" />

                            <TextView
                                android:id="@+id/tip_img"
                                android:layout_width="52.0dip"
                                android:layout_height="16.0dip"
                                android:layout_alignParentTop="true"
                                android:layout_marginRight="8.0dip"
                                android:layout_toRightOf="@+id/authentication_btn"
                                android:background="@drawable/com_tips_new"
                                android:gravity="center_vertical"
                                android:paddingLeft="4.0dip"
                                android:paddingRight="4.0dip"
                                android:text="@string/g_a2"
                                android:textColor="@color/app_white"
                                android:textSize="11.0sp"
                                android:visibility="gone" />
                        </RelativeLayout>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/arrow_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16.0dip"
                        android:background="@drawable/com_icon_arrow_right_white" />

                    <TextView
                        android:id="@+id/tip_notice"
                        android:layout_width="8.0dip"
                        android:layout_height="8.0dip"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16.0dip"
                        android:layout_toLeftOf="@+id/arrow_right"
                        android:background="@drawable/com_red_round" />
                </RelativeLayout>

                <View style="@style/divider" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="56.0dip"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/profile_btn_bg"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:id="@+id/myapplay_btn"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:background="@drawable/com_transparentbutton_selector"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/k1"
                            style="@style/btn_cardtext"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/com_bg_transparent_bg"
                            android:drawablePadding="1.0dip"
                            android:drawableTop="@drawable/profile_fuction_icon_my_jobs"
                            android:gravity="center"
                            android:paddingTop="4.0dip"
                            android:text="@string/myapplay"
                            android:textColor="@color/app_white"
                            android:textSize="12.0sp" />

                        <TextView
                            android:id="@+id/trace_job_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="12.0dip"
                            android:layout_marginTop="2.0dip"
                            android:background="@drawable/com_tips_amount"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="#ffffffff"
                            android:textSize="12.0sp"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <View
                        style="@style/divider_v"
                        android:layout_height="30.0dip"
                        android:layout_gravity="center_vertical" />

                    <RelativeLayout
                        android:id="@+id/myjob_btn"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:background="@drawable/com_transparentbutton_selector"
                        android:orientation="vertical" >

                        <TextView
                            style="@style/btn_cardtext"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/com_bg_transparent_bg"
                            android:drawablePadding="1.0dip"
                            android:drawableTop="@drawable/profile_fuction_icon_earn_money"
                            android:gravity="center"
                            android:paddingTop="4.0dip"
                            android:text="@string/my_job"
                            android:textColor="@color/app_white"
                            android:textSize="12.0sp" />

                        <TextView
                            android:id="@+id/my_job_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="12.0dip"
                            android:layout_marginTop="2.0dip"
                            android:background="@drawable/com_tips_amount"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="#ffffffff"
                            android:textSize="12.0sp"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <View
                        style="@style/divider_v"
                        android:layout_height="30.0dip"
                        android:layout_gravity="center_vertical" />

                    <RelativeLayout
                        android:id="@+id/nocommentary_btn"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:background="@drawable/com_transparentbutton_selector"
                        android:orientation="vertical" >

                        <TextView
                            style="@style/btn_cardtext"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/com_bg_transparent_bg"
                            android:drawablePadding="1.0dip"
                            android:drawableTop="@drawable/profile_fuction_icon_wait_comment"
                            android:gravity="center"
                            android:paddingTop="4.0dip"
                            android:text="@string/already_pay_nocommentary"
                            android:textColor="@color/app_white"
                            android:textSize="12.0sp" />

                        <TextView
                            android:id="@+id/nocommentary_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="12.0dip"
                            android:layout_marginTop="2.0dip"
                            android:background="@drawable/com_tips_amount"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="#ffffffff"
                            android:textSize="12.0sp"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <View
                        style="@style/divider_v"
                        android:layout_height="30.0dip"
                        android:layout_gravity="center_vertical" />

                    <RelativeLayout
                        android:id="@+id/alreadyfinish_btn"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:background="@drawable/com_transparentbutton_selector"
                        android:orientation="vertical" >

                        <TextView
                            style="@style/btn_cardtext"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/com_bg_transparent_bg"
                            android:drawablePadding="1.0dip"
                            android:drawableTop="@drawable/profile_fuction_icon_done"
                            android:gravity="center"
                            android:paddingTop="4.0dip"
                            android:text="@string/already_get"
                            android:textColor="@color/app_white"
                            android:textSize="12.0sp" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8.0dip"
                    android:background="@color/app_white"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/wage_list"
                        android:layout_width="fill_parent"
                        android:layout_height="48.0dip"
                        android:layout_weight="1.0"
                        android:background="@drawable/com_function_icon_bg_selector" >

                        <ImageView
                            android:id="@+id/im1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="16.0dip"
                            android:background="@drawable/profile_fuction_icon_income" />

                        <TextView
                            style="@style/btn_cardtext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="16.0dip"
                            android:layout_toRightOf="@+id/im1"
                            android:background="@drawable/com_bg_transparent_bg"
                            android:drawablePadding="16.0dip"
                            android:text="@string/wage_list" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="16.0dip"
                            android:background="@drawable/com_icon_arrow_right" />
                    </RelativeLayout>

                    <View
                        style="@style/divider"
                        android:layout_marginLeft="56.0dip" />

                    <RelativeLayout
                        android:id="@+id/present_list"
                        android:layout_width="fill_parent"
                        android:layout_height="48.0dip"
                        android:layout_weight="1.0"
                        android:background="@drawable/com_function_icon_bg_selector"
                        android:visibility="gone" >

                        <ImageView
                            android:id="@+id/im"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="16.0dip"
                            android:background="@drawable/profile_fuction_icon_package" />

                        <TextView
                            style="@style/btn_cardtext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="16.0dip"
                            android:layout_toRightOf="@+id/im"
                            android:background="@drawable/com_bg_transparent_bg"
                            android:drawablePadding="16.0dip"
                            android:text="@string/present" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="16.0dip"
                            android:background="@drawable/com_icon_arrow_right" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/app_white"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/job_collection"
                        android:layout_width="fill_parent"
                        android:layout_height="48.0dip"
                        android:layout_marginLeft="2.0dip"
                        android:layout_marginRight="2.0dip"
                        android:layout_weight="1.0"
                        android:background="@drawable/com_function_icon_bg_selector" >

                        <ImageView
                            android:id="@+id/im2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="16.0dip"
                            android:background="@drawable/profile_fuction_icon_collection" />

                        <TextView
                            style="@style/btn_cardtext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="16.0dip"
                            android:layout_toRightOf="@+id/im2"
                            android:background="@drawable/com_bg_transparent_bg"
                            android:text="@string/likeandcollection" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="16.0dip"
                            android:background="@drawable/com_icon_arrow_right" />
                    </RelativeLayout>

                    <View
                        style="@style/divider"
                        android:layout_marginLeft="56.0dip" />

                    <RelativeLayout
                        android:id="@+id/experience_list"
                        android:layout_width="fill_parent"
                        android:layout_height="48.0dip"
                        android:layout_marginLeft="2.0dip"
                        android:layout_marginRight="2.0dip"
                        android:layout_weight="1.0"
                        android:background="@drawable/com_function_icon_bg_selector"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/im5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="16.0dip"
                            android:background="@drawable/profile_fuction_icon_story" />

                        <TextView
                            style="@style/btn_cardtext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="16.0dip"
                            android:layout_toRightOf="@+id/im5"
                            android:background="@drawable/com_bg_transparent_bg"
                            android:text="@string/experience" />

                        <ImageView
                            android:id="@+id/m2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="16.0dip"
                            android:background="@drawable/com_icon_arrow_right" />

                        <TextView
                            style="@style/btn_cardtext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="8.0dip"
                            android:layout_toLeftOf="@+id/m2"
                            android:background="@drawable/com_bg_transparent_bg"
                            android:text="@string/tip_expbtn"
                            android:textColor="@color/app_hint_color"
                            android:textSize="12.0sp" />
                    </RelativeLayout>

                    <View
                        style="@style/divider"
                        android:layout_marginLeft="56.0dip" />

                    <RelativeLayout
                        android:id="@+id/commentary_list"
                        android:layout_width="fill_parent"
                        android:layout_height="48.0dip"
                        android:layout_weight="1.0"
                        android:background="@drawable/com_function_icon_bg_selector"
                        android:onClick="onClick"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/im6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="16.0dip"
                            android:background="@drawable/profile_fuction_icon_comment" />

                        <TextView
                            style="@style/btn_cardtext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="16.0dip"
                            android:layout_toRightOf="@+id/im6"
                            android:background="@drawable/com_bg_transparent_bg"
                            android:text="@string/commentary1" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="16.0dip"
                            android:background="@drawable/com_icon_arrow_right" />
                    </RelativeLayout>

                    <View
                        style="@style/divider"
                        android:layout_marginLeft="56.0dip" />

                    <RelativeLayout
                        android:id="@+id/redpacket_collection"
                        android:layout_width="fill_parent"
                        android:layout_height="48.0dip"
                        android:layout_marginLeft="2.0dip"
                        android:layout_marginRight="2.0dip"
                        android:layout_weight="1.0"
                        android:background="@drawable/com_function_icon_bg_selector"
                        android:visibility="visible" >

                        <ImageView
                            android:id="@+id/imx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="16.0dip"
                            android:background="@drawable/profile_fuction_icon_share" />

                        <TextView
                            style="@style/btn_cardtext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="16.0dip"
                            android:layout_toRightOf="@+id/imx"
                            android:background="@drawable/com_bg_transparent_bg"
                            android:text="@string/req_fr" />

                        <ImageView
                            android:id="@+id/m1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="16.0dip"
                            android:background="@drawable/com_icon_arrow_right" />
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/setting_list"
                    android:layout_width="fill_parent"
                    android:layout_height="48.0dip"
                    android:layout_marginTop="8.0dip"
                    android:layout_weight="1.0"
                    android:background="@drawable/com_function_icon_bg_selector"
                    android:onClick="onClick"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imccc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16.0dip"
                        android:background="@drawable/profile_fuction_icon_set" />

                    <TextView
                        style="@style/btn_cardtext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16.0dip"
                        android:layout_toRightOf="@+id/imccc"
                        android:background="@drawable/com_bg_transparent_bg"
                        android:text="@string/settingText" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16.0dip"
                        android:background="@drawable/com_icon_arrow_right" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>